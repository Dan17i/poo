<VBox alignment="CENTER" prefHeight="460.0" prefWidth="940.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.torneodeportivo.gui.TorneoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Nombre:" />
        <Label text="Fecha de Inicio:" GridPane.rowIndex="1" />
        <Label text="Fecha de Inicio Incripciones:" GridPane.rowIndex="2" />
        <Label text="Fecha de Fin Incripciones:" GridPane.rowIndex="3" />
        <Label text="Número de participantes:" GridPane.rowIndex="4" />
        <Label text="Limite de Edad:" GridPane.rowIndex="5" />
        <Label text="Valor de la Inscripción:" GridPane.rowIndex="6" />
        <Label text="Tipo de Torneo:" GridPane.rowIndex="7" />
        <TextField fx:id="tfNombre" GridPane.columnIndex="1" />
        <DatePicker fx:id="dpFechaInicio" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <DatePicker fx:id="dpFechaInicioInscripciones" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <DatePicker fx:id="dpFechaFinInscripciones" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="tfNumeroParticipantes" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <TextField fx:id="tfLimiteEdad" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <TextField fx:id="tfValorInscripcion" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <ComboBox fx:id="cbTipoTorneo" promptText="Seleccione el tipo" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      
    </GridPane>
    <Button mnemonicParsing="false" onAction="#onRegistrarClick" text="Aceptar" />
</VBox>
